<UserControl x:Class="Microsoft.R.Components.Information.HostLoadIndicator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Microsoft.R.Components.Information"
             xmlns:wpf="clr-namespace:Microsoft.R.Wpf;assembly=Microsoft.R.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Width="48" Height="16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Rectangle Grid.Column="0" Fill="{Binding Path=CpuLoad, Converter={x:Static wpf:Converters.LoadToColor}}" />
        <Rectangle Grid.Column="1" Fill="{Binding Path=MemoryLoad, Converter={x:Static wpf:Converters.LoadToColor}}" />
        <Rectangle Grid.Column="2" Fill="{Binding Path=NetworkLoad, Converter={x:Static wpf:Converters.LoadToColor}}" />
    </Grid>
</UserControl>
