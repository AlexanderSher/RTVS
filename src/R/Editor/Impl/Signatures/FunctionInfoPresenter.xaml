<UserControl x:Class="Microsoft.R.Editor.Signatures.FunctionInfoPresenter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Microsoft.R.Editor.Signatures"
             xmlns:rwpf="clr-namespace:Microsoft.R.Wpf;assembly=Microsoft.R.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Name="Signature" 
                   Text="{Binding SignatureString}"
                   Margin="6" TextWrapping="NoWrap" 
                   Foreground = "{DynamicResource {x:Static rwpf:Brushes.InfoTextKey}}" 
                   Background = "{DynamicResource {x:Static rwpf:Brushes.InfoBackgroundKey}}"/>
        <TextBlock Name="Documentation" 
                   Text="{Binding Documentation}"
                   Grid.Row="1" Margin="6" TextWrapping="Wrap" FontStyle="Italic" 
                   Foreground = "{DynamicResource {x:Static rwpf:Brushes.InfoTextKey}}"
                   Background = "{DynamicResource {x:Static rwpf:Brushes.InfoBackgroundKey}}"/>
    </Grid>
</UserControl>
